<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="vm"
            type="com.lttclaw.metronome.viewmodel.PlayViewModel" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:keepScreenOn="true"
        android:padding="24dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">
            <Button
                android:id="@+id/btn_start"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:enabled="@{!vm.playing}"
                android:text="启动"/>
            <Button
                android:id="@+id/btn_stop"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:enabled="@{vm.playing}"
                android:text="停止"/>
        </RelativeLayout>
        <Button
            android:id="@+id/btn_pause"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:enabled="@{vm.playing}"
            tools:text="暂停"
            android:text="@{vm.pauseBtnText}"/>
        <TextView
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="当前第X小节"
            android:text="@{`当前第`+String.valueOf(vm.curSectionIndex+1)+`小节`}"
            android:textSize="16sp"
            />
        <TextView
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="32sp"
            tools:text="12"
            android:text="@{String.valueOf(vm.curPlayingIndex)}"/>
        <Button
            android:id="@+id/btn_go_setting"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.Button.Small"
            android:enabled="@{!vm.playing}"
            android:text="编辑小节配置"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_play"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:itemCount="5"
            tools:listitem="@layout/item_play_section"
            android:layout_marginTop="12dp"/>
    </LinearLayout>
</layout>